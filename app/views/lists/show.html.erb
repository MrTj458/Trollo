<h1><%= @board.name %> - <%= @list.name %></h1>
<%= link_to 'Edit List', edit_board_list_path(@board, @list), class:"ui blue button" %>
<%= link_to 'New Task', new_list_task_path(@list), class:"ui blue button"  %>
<%= link_to "Back To #{@board.name}", board_path(@board), class:"ui blue button" %>
<ul>
<% @list.tasks.each do |task| %>
  <li>
    <%= task.task %>
    <%= link_to 'Edit Task', edit_list_task_path(@list, task) %>
    <%= link_to 'Delete Task', list_task_path(@list, task), method: :delete %>
  </li>
<% end %>
</ul>
